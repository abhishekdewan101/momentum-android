<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Good Morning, Batman "
        android:textSize="25dp"
        android:id="@+id/name"
        android:layout_below="@+id/time"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The world will bow to you someday"
        android:id="@+id/qoutation"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="11:02 am"
        android:id="@+id/time"
        android:textSize="80dp"
        android:textColor="#80FFFFFF"
        android:layout_marginTop="133dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherCondition"
        android:src="@drawable/sunny"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/weather" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="63 F"
        android:textSize="35dp"
        android:id="@+id/weather"
        android:layout_alignBottom="@+id/weatherCondition"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
